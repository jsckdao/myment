{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
}